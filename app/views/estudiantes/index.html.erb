<center>
<%= form_tag request.path, :method => 'get' do %>
<%= content_tag :label do %>
Nombre Estudiante
<%= text_field_tag :search, params[:search] %>
<%= submit_tag "Consultar", :name => nil, :class => 'btn btn-mini btn-inverse'  %>
<% end %>
<% end %>
<%= form_tag request.path, :method => 'get' do %>
<%= content_tag :label do %>
Numero de Registros
<%= text_field_tag :registros, params[:registros] %>
<% end %>
<% end %>
<br />
<br />
<br /> 
</center>
<table class="table table-striped table-bordered table-condensed pretty">
  
<tr>
  <th><%= sortable "id" %></th>
  <th><%= sortable "nombre" %></th>
  <th><%= sortable "cedula" %></th>
  <th><%= sortable "email" %></th>
  <th><%= sortable "direccion" %></th>
  <th><%= sortable "fecha_nacimiento"  %></th>
</tr>


  </thead>
  <tbody>
     <%= render @estudiantes %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'Nuevo Estudiante',   new_curso_estudiante_path, :class => "btn btn-mini btn-info", :remote => true %></td>
    </tr>
  </tfoot>
</table>
<br>
<br>
<%= link_to 'Atras', cursos_path, :class => 'btn btn-small btn-inverse' %>
<br />
<br />
<div align="center">
<%= will_paginate @estudiantes, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' rescue nil%>
</div>
