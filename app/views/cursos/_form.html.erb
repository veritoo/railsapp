<%= simple_form_for(@curso, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>

  <%= f.error_notification %>
  <%= display_base_errors @curso %>

  <%= f.input :nombre %>
  <%= f.input :ficha %>
  
  <div class="form-actions">
    <%= f.submit "guardar", :class => 'btn btn-info' %>
    <%= link_to 'Atras', cursos_path, :class => 'btn btn-inverse' %>
  </div>
<% end %>
